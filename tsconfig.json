{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
		"sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@ui": ["src/components/ui"]
    },
  },
  "outDir": "./dist/",
  "include": ["src"],
  "exclude": ["node_modules"]
}